<UserControl x:Class="Subfuzion.Silverlight.UI.Charting.OneParameter.OneParameterPlotControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
			 xmlns:Charting="clr-namespace:Subfuzion.Silverlight.UI.Charting" mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="400">

	<UserControl.Resources>
		<Charting:OneParameterFamilyValueConverter x:Key="oneParameterFamilyValueConverter" />
		<Charting:PlotConstraintValueConverter x:Key="plotConstraintValueConverter" />
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" Background="White">
		<!-- Plot Control -->
		<Border Grid.Row="0" Margin="10" BorderBrush="Black" BorderThickness="1" Background="White">
			<Grid Margin="4 8 6 6">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<!-- Plot Control -->
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<!-- Spending Function value controls -->
					<StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="6" x:Name="spendingFunctionParameter">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="{Binding Path=SpendingFunctionParameterMaximum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Right" />
							<toolkit:NumericUpDown Grid.Row="1" Margin="2" Height="20" Width="70" x:Name="gammaTextBox"
											   DecimalPlaces="3"
											   Maximum="{Binding Path=SpendingFunctionParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=SpendingFunctionParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=SpendingFunctionParameter, Mode=TwoWay}" />
							<TextBlock Grid.Row="2" Text="{Binding Path=SpendingFunctionParameterMinimum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Right" />
						</Grid>
						<Slider Grid.Row="1" Orientation="Vertical" Margin="2" x:Name="gammaSlider"
											   Maximum="{Binding Path=SpendingFunctionParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=SpendingFunctionParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=SpendingFunctionParameter, Mode=TwoWay}" />
					</StackPanel>

					<!-- Interim Spending value controls -->
					<StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="6" x:Name="interimSpending" >
						<Slider Orientation="Vertical" Margin="2" x:Name="interimSpendingSlider"
											   Maximum="{Binding Path=InterimSpendingParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=InterimSpendingParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=InterimSpendingParameter, Mode=TwoWay}" />
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="{Binding Path=InterimSpendingParameterMaximum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Left" />
							<toolkit:NumericUpDown Grid.Row="1" Margin="2" Height="20" Width="70" x:Name="interimSpendingTextBox"
											   DecimalPlaces="3"
											   Maximum="{Binding Path=InterimSpendingParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=InterimSpendingParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=InterimSpendingParameter, Mode=TwoWay}" />
							<TextBlock Grid.Row="2" Text="{Binding Path=InterimSpendingParameterMinimum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Left" />
						</Grid>
					</StackPanel>

					<!-- Timing value controls -->
					<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="6" x:Name="timing">
						<Slider Orientation="Horizontal" Margin="2" x:Name="timingSlider"
											   Maximum="{Binding Path=TimingParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=TimingParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=TimingParameter, Mode=TwoWay}" />
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<TextBlock Text="{Binding Path=TimingParameterMinimum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Left" VerticalAlignment="Center"/>
							<toolkit:NumericUpDown Grid.Column="1" Margin="2" Height="20" Width="70" x:Name="timingTextBox"
											   DecimalPlaces="3"
											   Maximum="{Binding Path=TimingParameterMaximum, Mode=OneWay}"
											   Minimum="{Binding Path=TimingParameterMinimum, Mode=OneWay}"
											   Value="{Binding Path=TimingParameter, Mode=TwoWay}" />
							<TextBlock Grid.Column="2" Text="{Binding Path=TimingParameterMaximum, Mode=OneWay, StringFormat=\{0:F3\}}" TextAlignment="Right" VerticalAlignment="Center" />
						</Grid>
					</StackPanel>

					<!-- Plot Control -->
					<Border Grid.Row="0" Grid.Column="1" BorderBrush="DarkGray" BorderThickness="1">
						<Charting:LinePlot x:Name="plot" Background="#FFFCF8" PlotFunction="{Binding Path=CurrentPlotFunction, Mode=OneWay}" LogOutput="{Binding Path=LogOutput, Mode=TwoWay}">
							<Charting:LinePlot.ControlPoint>
								<Ellipse Fill="Orange" Stroke="Black" Width="16" Height="16">
									<Ellipse.RenderTransform>
										<TranslateTransform X="-8" Y="-8"/>
									</Ellipse.RenderTransform>
								</Ellipse>
							</Charting:LinePlot.ControlPoint>
							<Charting:LinePlot.ControlPointHover>
								<Ellipse Fill="White" Stroke="Black" Width="16" Height="16">
									<Ellipse.RenderTransform>
										<TranslateTransform X="-8" Y="-8"/>
									</Ellipse.RenderTransform>
								</Ellipse>
							</Charting:LinePlot.ControlPointHover>
							<Charting:LinePlot.ControlPointDrag>
								<Ellipse Fill="White" Stroke="Red" Width="16" Height="16">
									<Ellipse.RenderTransform>
										<TranslateTransform X="-8" Y="-8"/>
									</Ellipse.RenderTransform>
								</Ellipse>
								<!--<Path Fill="White" Stroke="Red">
							<Path.Data>
								<EllipseGeometry RadiusX="10" RadiusY="10" Center="10,10" />
							</Path.Data>
						</Path>-->
							</Charting:LinePlot.ControlPointDrag>
						</Charting:LinePlot>
					</Border>
				</Grid>

				<!-- Contstraints -->
				<Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="2">
					<Border BorderBrush="DarkGray" BorderThickness="1" Margin="4">
						<StackPanel Orientation="Vertical">
							<ComboBox SelectedIndex="0" Margin="2"
								          ItemsSource="{Binding Path=CurrentSpendingFunctionFamily, Mode=TwoWay, Converter={StaticResource oneParameterFamilyValueConverter}}"
								          SelectedItem="{Binding Path=CurrentSpendingFunctionFamily, Mode=TwoWay, Converter={StaticResource oneParameterFamilyValueConverter}}" />
							<RadioButton x:Name="moveLineRadioButton"
										 GroupName="plotConstraint"
										 Content="{Binding Path=PlotConstraint, Mode=TwoWay, Converter={StaticResource plotConstraintValueConverter}, ConverterParameter=MoveLineWithPoint}"
										 IsChecked="{Binding Path=PlotConstraint, Mode=TwoWay, Converter={StaticResource plotConstraintValueConverter}, ConverterParameter=MoveLineWithPoint}"
										 />
							<RadioButton x:Name="movePointRadioButton"
										 GroupName="plotConstraint"
										 Content="{Binding Path=PlotConstraint, Mode=TwoWay, Converter={StaticResource plotConstraintValueConverter}, ConverterParameter=MovePointAlongLine}"
										 IsChecked="{Binding Path=PlotConstraint, Mode=TwoWay, Converter={StaticResource plotConstraintValueConverter}, ConverterParameter=MovePointAlongLine}"
										 />
						</StackPanel>
					</Border>
				</Grid>
			</Grid>
		</Border>

	</Grid>
</UserControl>
